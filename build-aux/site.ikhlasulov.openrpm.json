{
  "app-id": "site.ikhlasulov.openrpm",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "command": "site.ikhlasulov.openrpm",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "openrpm",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "dir",
          "path": ".."
        }
      ]
    }
  ]
}
